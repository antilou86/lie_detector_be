# Backend Environment Configuration
# Copy this file to .env and fill in your API keys

# Server
PORT=3001

# Google Fact Check Tools API
# Get your API key from: https://console.cloud.google.com/apis/credentials
# Enable "Fact Check Tools API" in your Google Cloud project
GOOGLE_FACT_CHECK_API_KEY=your_google_api_key_here

# OpenAI API (optional - for LLM-based verification fallback)
# Get your API key from: https://platform.openai.com/api-keys
# This is used when no existing fact-checks are found
OPENAI_API_KEY=your_openai_api_key_here

# ClaimBuster API (optional)
# Get your API key from: https://idir.uta.edu/claimbuster/
CLAIMBUSTER_API_KEY=

# Cache settings (in seconds)
CACHE_TTL=3600
